# ===========================================
# SalesMatch Platform - Environment Variables
# ===========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control!

# ===========================================
# Server Configuration
# ===========================================
NODE_ENV=development
PORT=3000
HOST=localhost
MAX_REQUEST_SIZE=10mb

# ===========================================
# Database Configuration
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=salesmatch
DB_USER=postgres
DB_PASSWORD=your_database_password_here
DB_SSL=false
DB_MAX_CONNECTIONS=10
DB_IDLE_TIMEOUT=10000

# ===========================================
# Telegram Bot Configuration
# ===========================================
# Get your bot token from @BotFather on Telegram
BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_SECRET_TOKEN=your_telegram_secret_token_here
WEBAPP_URL=https://your-domain.com
WEBHOOK_URL=https://your-domain.com/webhook

# ===========================================
# AI Configuration (DeepSeek)
# ===========================================
AI_PROVIDER=deepseek
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com
AI_MODEL=deepseek-chat
AI_MAX_TOKENS=2000
ENABLE_AI=true

# ===========================================
# Security Configuration
# ===========================================
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_random
JWT_EXPIRY=24h
SESSION_SECRET=your_session_secret_here
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# ===========================================
# CORS Configuration
# ===========================================
ALLOWED_ORIGINS=https://web.telegram.org,https://telegram.org,http://localhost:3000

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=info
LOG_MAX_FILE_SIZE=5242880
LOG_MAX_FILES=10

# ===========================================
# Cache Configuration
# ===========================================
CACHE_ENABLED=true
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# ===========================================
# Feature Flags
# ===========================================
ENABLE_AI=true
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
MOCK_MODE=false

# ===========================================
# Development/Testing
# ===========================================
# Set to true for testing without real API keys
# MOCK_MODE=true
